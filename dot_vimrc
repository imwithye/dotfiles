call plug#begin()
Plug 'preservim/nerdtree'
Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }
Plug 'junegunn/fzf.vim'
Plug 'neoclide/coc.nvim', { 'branch': 'release' }
Plug 'github/copilot.vim'
call plug#end()

" Set colorscheme
set background=dark
colorscheme retrobox

" Set encoding
set encoding=utf-8

" Some servers have issues with backup files
set nobackup
set nowritebackup

" Always show the signcolumn, otherwise it would shift the text each time
" diagnostics appear/become resolved
set signcolumn=yes

" Enable syntax highlighting
syntax on

" Show line numbers
set number
set relativenumber

" Show hidden chars
set list
set listchars=tab:>-,trail:Â·,extends:>,precedes:<,eol:$

" Auto reload
set autoread

" Set tabs and indentation
set tabstop=4       " Number of spaces that a <Tab> in the file counts for
set shiftwidth=4    " Number of spaces to use for each step of (auto)indent
set expandtab       " Use spaces instead of tabs

" Enable line highlighting
set cursorline

" Enable search highlighting
set hlsearch
set incsearch

" Enable mouse support
set mouse=a

" Enable auto-completion menu
set wildmenu
set wildmode=list:longest

" Set default split directions
set splitbelow
set splitright

" Set scrolloff for better navigation
set scrolloff=8

" Set timeout for key mappings
set timeoutlen=1000

" Set keys
let mapleader=";"
nmap <leader>t :NERDTreeToggle<CR>
nmap f :Files<CR>
nmap s :split<CR>
nmap v :vsplit<CR>

" Use arrow key to select and enter to complete
inoremap <silent><expr> <Down>
      \ coc#pum#visible() ? coc#pum#next(1) :
      \ CheckBackspace() ? "\<Down>" :
      \ coc#refresh()
inoremap <expr><Up> coc#pum#visible() ? coc#pum#prev(1) : "\<Up>"
inoremap <silent><expr> <CR> coc#pum#visible() ? coc#pum#confirm()
                              \: "\<C-g>u\<CR>\<c-r>=coc#on_enter()\<CR>"
function! CheckBackspace() abort
  let col = col('.') - 1
  return !col || getline('.')[col - 1]  =~# '\s'
endfunction

if has("gui_macvim")
    set guioptions=
    let g:coc_node_path = '/opt/homebrew/bin/node'
endif
