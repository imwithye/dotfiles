" Simple, yet useful, Vim configuration without external plugins.

" Enable syntax highlighting.
syntax on

" Show line numbers.
set number

" Set indentation rules.
" Use 4 spaces for tabs.
set tabstop=4
" Use 4 spaces for auto-indenting.
set shiftwidth=4
" Use spaces instead of tab characters.
set expandtab
" Enable smart auto-indenting.
set smartindent
" Enable auto-indenting.
set autoindent

" Configure search settings.
" Highlight search results.
set hlsearch
" Enable incremental search (search as you type).
set incsearch
" Ignore case when searching, unless a capital letter is used.
set ignorecase
set smartcase

" Enable mouse support in all modes.
set mouse=a

" Show the cursor position in the status line.
set ruler

" Show matching brackets and parentheses.
set showmatch

" Allow backspacing over everything in insert mode.
set backspace=indent,eol,start

" Use UTF-8 encoding.
set encoding=utf-8

" Enable filetype detection, which allows for filetype-specific settings.
filetype plugin indent on

" Disable the creation of swap files.
set noswapfile
" Disable the creation of backup files.
set nobackup
